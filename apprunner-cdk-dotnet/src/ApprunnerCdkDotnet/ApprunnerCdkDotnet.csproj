<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net6.0</TargetFramework>
		<!-- Roll forward to future major versions of the netcoreapp as needed -->
		<RollForward>Major</RollForward>
	</PropertyGroup>

	<ItemGroup>
		<!-- CDK Construct Library dependencies -->
		<PackageReference Include="Amazon.CDK.AWS.AppRunner.Alpha" Version="2.95.1-alpha.0" />
		<PackageReference Include="Amazon.CDK.Lib" Version="2.95.1" />
		<PackageReference Include="Constructs" Version="10.2.70" />

		<!-- jsii Roslyn analyzers (un-comment to obtain compile-time checks for missing required props
    <PackageReference Include="Amazon.Jsii.Analyzers" Version="*" PrivateAssets="all" Version="10.3.0 />
    -->
	</ItemGroup>

</Project>
