{
  "id": "serverless-pattern-schema",
  "type": "object",
  "properties": {
    "title": { "type": "string", "maxLength": 75 },
    "description": { "type": "string", "maxLength": 150 },
    "language": {
      "type": "string",
      "enum": ["TypeScript", "Node.js", "Python", "Java", "Go", "Rust", ".NET", "OpenAPI", "YAML", ""]
    },
    "framework": {
      "type": "string",
      "enum": ["CDK", "CDK for Terraform", "SAM", "Terraform", "Serverless Framework", "Terraform (with modules)", "Pulumi"]
    },
    "introBox": {
      "type": "object",
      "properties": {
        "headline": { "type": "string", "maxLength": 75 },
        "text": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["headline", "text"]
    },
    "gitHub": {
      "type": "object",
      "properties": {
        "template": {
          "type": "object",
          "properties": {
            "repoURL": { "type": "string" },
            "templateURL": { "type": "string" },
            "projectFolder": { "type": "string" },
            "templateFile": {
              "type": "string"
            }
          },
          "required": ["repoURL", "templateURL", "projectFolder", "templateFile"]
        }
      },
      "required": ["template"]
    },
    "authors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "bio": { "type": "string" },
          "linkedin": {
            "type": "string",
            "not": {
              "format": "uri"
            }
          }
        },
        "required": ["name", "bio"]
      }
    }
  },
  "required": ["title", "language", "framework", "introBox", "gitHub", "authors"]
}
